
#include "minishell_bonus.h"

void	ms_jobadd(t_job **lst, t_job *new)
{
	t_job	*ptr;

	if (!lst)
		return ;
	if (*lst)
	{
		ptr = *lst;
		while (ptr->next)
			ptr = ptr->next;
		ptr->next = new;
	}
	else
		*lst = new;
}

t_job	*ms_jobnew(t_cmd **cmds, char operator)
{
	t_job	*new_node;

	if (!str)
		return (NULL);
	new_node = ft_xalloc(sizeof(t_job));
	if (!new_node)
		return (NULL);
	new_node->cmds = cmds;
	new_node->operator = operator;
	new_node->next = NULL;
	return (new_node);
}

void	ms_jobclear(t_job **lst)
{
	t_job	*ptr;
	t_job	*buffer;

	if (!lst && !*lst)
		return ;
	ptr = *lst;
	while (ptr)
	{
		buffer = ptr->next;
		ms_jobdelone(ptr);
		ptr = buffer;
	}
	*lst = NULL;
}

void	ms_jobdelone(t_job *lst)
{
	if (!lst)
		return ;
	free (lst);
}

t_job	*ms_joblast(t_job *lst)
{
	t_job	*ptr;

	if (!lst)
		return (lst);
	ptr = lst;
	while (ptr->next)
		ptr = ptr->next;
	return (ptr);
}
